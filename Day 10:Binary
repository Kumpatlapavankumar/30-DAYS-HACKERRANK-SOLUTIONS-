
import math
import os
import random
import re
import sys
if __name__ == '__main__':
    number = int(input())
ans = 0
max = 0
while number > 0:
    if number % 2 == 1:
        ans=ans+1
        if ans > max:
            max = ans
    else:
        ans = 0
#using // to calculate integer only with out floating 
    number=number//2
print(max)
